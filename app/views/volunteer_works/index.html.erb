<p id="notice"><%= notice %></p>

<div class="ui very padded container ">
  <h1>Volunteer Work</h1>

  <table class="ui very basic celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Company</th>
        <th>Dates</th>
        <th>City</th>
        <th>Province</th>
        <th>Skills</th>
        <th>Tags</th>
      </tr>
    </thead>

    <tbody>
      <% @volunteer_works.each do |volunteer_work| %>
        <tr>
          <td>
              <%= link_to volunteer_work.name, volunteer_work %>
          </td>
          <td>
            <%- if !volunteer_work.company.nil? %>
              <%= volunteer_work.company %>
            <%- end %>
          </td>
          <td>
            <%- if !volunteer_work.dates.empty? %>
              <%- volunteer_work.dates.each do |date| -%>
                <%= date %>
              <%- end -%>
            <%- end -%>
          </td>
          <td>
            <%- if !volunteer_work.city.empty? %>
              <%- volunteer_work.city.each do |city| -%>
                <%= link_to city.name, city %>
              <%- end -%>
            <%- end -%>
          </td>
          <td>
            <%- if !volunteer_work.province.empty? %>
              <%- volunteer_work.province.each do |province| -%>
                <%= link_to province.name, province %>
              <%- end -%>
            <%- end -%>
          </td>
          <td>
            <%- if !volunteer_work.skills.empty? %>
              <%= volunteer_work.skills.map{|skill| link_to(skill.name, skill) }.join(", ").html_safe %>
            <%- end -%>
          </td>
          <td>
            <%- if !volunteer_work.tags.empty? %>
              <%= volunteer_work.tags.map{|tag| link_to(tag.name, tag) }.join(", ").html_safe %>
            <%- end -%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>




