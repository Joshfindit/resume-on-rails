<p id="notice"><%= notice %></p>

<div class="ui very padded container ">
  <h1>Work Experience</h1>

  <table class="ui very basic celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Company</th>
        <th>City</th>
        <th>Province</th>
        <th>Skills</th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.sort { |b,a| a.end_date <=> b.end_date }.each do |job| %>
        <tr>
          <td>
              <%= link_to job.name, job %>
          </td>
          <td>
            <%- if !job.start_date.nil? %>
              <%= job.start_date %>
            <%- end %>
          </td>
          <td>
            <%- if !job.end_date.nil? %>
              <%= job.end_date %>
            <%- end %>
          </td>
          <td>
            <%- if !job.company.nil? %>
              <%= job.company %>
            <%- end %>
          </td>
          <td>
            <%- if !job.city.empty? %>
              <%- job.city.each do |city| -%>
                <%= link_to city.name, city %>
              <%- end -%>
            <%- end -%>
          </td>
          <td>
            <%- if !job.province.empty? %>
              <%- job.province.each do |province| -%>
                <%= link_to province.name, province %>
              <%- end -%>
            <%- end -%>
          </td>
          <td>
            <%- if !job.skills.empty? %>
              <%= job.skills.map{|skill| link_to(skill.name, skill) }.join(", ").html_safe %>
            <%- end -%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

